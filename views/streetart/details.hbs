<main id="map-page">
  <div id="street-art">
    <img src={{streetart.streetArtImgUrl}} alt="picture street art of" {{streetart.artist}}>
  </div>
  
  <div class="right-side">   
     <nav id="nav-small">
      <a href="/"><img src="/images/logo_black_white_yellow.png" alt="Logo ST_ART"></a>
      <div>
        {{#if user}}
        <a href="/userProfile">My profile</a>
        {{else}}
        <a href="/login">Login</a>
        {{/if}}
      </div>
   </nav>

  

  <div id="overview-info" >
    <a id="arrow-back" href="javascript:javascript:history.go(-1)"> < back</a> 

    
    <div id="art-details">
      {{!-- <hr> --}}

      <h2>{{streetart.fullAddress}}</h2>
      <p>Uploaded: {{streetart.createdAt}}</p>
     
      <p><span>Artist:</span>{{streetart.artist}}</p>
      <p> <span>Name artwork:</span> {{streetart.name}}</p>

      <hr>
      <h3>Uploaded by:</h3>
      <div> 
        <div>
          <img src={{user.profileImgUrl}} alt="Profile picture of user {{user.username}}">  
          <p> {{user.username}}</p>
        </div>

        {{#if user}}
          <a>Edit artwork</a>
        {{/if}}

      </div>
    </div>

  </div>
 </div>

</main>