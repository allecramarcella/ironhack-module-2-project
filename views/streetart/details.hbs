<main id="map-page">
  <div id="street-art">
    <img src={{streetart.streetArtImgUrl}} alt="picture street art of" {{streetart.artist}}>
  </div>
  
  <div class="right-side">   
     <nav id="nav-small">
      <a href="/"><img src="/images/logo_black_white_yellow.png" alt="Logo ST_ART"></a>
      <div>
        {{#if user}}
        <a href="/userProfile">My profile</a>
        {{else}}
        <a href="/login">Login</a>
        {{/if}}
      </div>
   </nav>

  

  <div id="overview-info" >
    <a id="arrow-back" href="javascript:javascript:history.go(-1)"> < back</a> 

    
    <div id="art-details">
      {{!-- <hr> --}}

      <h2>{{streetart.fullAddress}}</h2>
      <h3>Uploaded: {{dateFormat streetart.createdAt "dddd, MMMM Do YYYY"}}</h3>
  
      <p><span>Artist: </span>{{streetart.artist}}</p>
      <p> <span>Name artwork: </span> {{streetart.name}}</p>

      <hr>
      <h4>Uploaded by:</h4>
      <div id="uploader-stuff"> 
        <div id="uploader-info">
          <img src={{streetart.user.profileImgUrl}} alt="Profile picture of user {{streetart.user.username}}">  
          <p> {{streetart.user.username}}</p>
        </div>
        <div id="uploader-controls">
          {{#if user}}
            <a href="/streetart/artwork/edit-{{streetart._id}}">Edit</a>
            <form action="/streetart/artwork/details/delete-{{streetart._id}}" method="POST">
              <button id='button-no-style'>Delete</button>
            </form>
    
          {{/if}}
        </div>


      </div>
    </div>

  </div>
 </div>

</main>