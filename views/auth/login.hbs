<header class="header-home">
  <div class="nav">
    <div id="overlay"></div>
    <div class="nav-background"></div>
    <nav>
      <div>
         <a href="/"><img src="../images/logo_black_white_yellow.png" alt="Logo ST_ART"></a>      </div>
      <div class="link-items">
        <a href="javascript:javascript:history.go(-1)" id="closeIcon">x</a>
      </div>
    </nav>
  </div>

  <div id="form">
    <h1>Login</h1>

    <form action="/login?redirect={{redirect}}" method="POST">
    
      <label for="input-email">Email</label>
      <input type="email" id="input-email" name="email" placeholder="Your email" />

      <label for="input-password">Password</label>
      <input type="password" name="password" id="input-password" placeholder="********" />

      <button type="submit">Login</button>

      <p>No account yet? <a href="/signup">Signup</a> first.</p>

      {{#if errorMessage}}
        <p class="error">{{errorMessage}}</p>
      {{/if}}
    </form>
  </div>


</header>

