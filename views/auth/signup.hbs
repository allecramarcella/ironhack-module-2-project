<header class="header-home">
 <div class="nav">
    <div id="overlay"></div>
    <nav>
      <div>
         <a href="/"><img src="../images/logo_black_white_yellow.png" alt="Logo ST_ART"></a>      </div>
      <div class="link-items">
        <a href="javascript:javascript:history.go(-1)" id="closeIcon">x</a>
      </div>
    </nav>
  </div>

  <div id="form">
    <h1>Signup</h1>

    <form action="/signup" method="POST" enctype="multipart/form-data">

      <label for="input-username">Username</label>
      <input type="text" id="input-username" name="username" placeholder="Your username" />

      <label for="input-email">Email</label>
      <input type="email" id="input-email" name="email" placeholder="Your email" />

      <label for="input-password">Password</label>
      <input type="password" name="password" id="input-password" placeholder="********" />

      <button type="submit">Create account</button>


      {{#if errorMessage}}
        <p class="error">{{errorMessage}}</p>
      {{else}}
         <p>Already an account? Go to <a href="/signup">Login</a></p>
      {{/if}}
    </form>
  </div>


</header>

