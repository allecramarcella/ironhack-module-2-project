<header class="header-home">
  <div class="nav">
    <div id="overlay"></div>
    <div class="nav-background"></div>
    <nav>
      <div>
        {{!-- <img src="../images/logo horizontaal.png" alt="Logo ST_ART horizontaal "> --}}
      </div>
      <div class="link-items">
        <a href="/" id="closeIcon">x</a>
      </div>
    </nav>
  </div>

  <div id="form">
    <h1>Signup</h1>

    <form action="/signup" method="POST" enctype="multipart/form-data">

      <label for="input-username">Username</label>
      <input type="text" id="input-username" name="username" placeholder="Your username" />

      <label for="input-email">Email</label>
      <input type="email" id="input-email" name="email" placeholder="Your email" />

      <label for="input-password">Password</label>
      <input type="password" name="password" id="input-password" placeholder="********" />

      {{!-- <label for="input-profile-picture">Upload profile picture</label>
      <input type="file" name='profile-picture' id="input-profile-picture"> --}}

      <button type="submit">Create account</button>

      {{#if errorMessage}}
        <p class="error">{{errorMessage}}</p>
      {{/if}}
    </form>
  </div>


</header>

